{
  "extends": ["@sanity/eslint-config-studio"],

  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },

  // "parser": "esprima",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "worker": true,
    "mocha": true
  },
  "rules": {
    "quotes": [
      2,
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": true }
    ],
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "comma-dangle": 0,
    "react/jsx-uses-vars": 1,
    "react/display-name": 1,
    "no-unused-vars": "warn",
    "no-console": 1,
    "no-unexpected-multiline": "warn"
  }
}
